{
  "name": "base-project",
  "version": "1.0.0",
  "author": "ArhamSoft MERN Code Audit Committee",
  "main": "src/index.js",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "yarn": "*"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js -i max",
    "test": "echo \"No test specified\"",
    "dev": "nodemon ./src/index.js",
    "pm2": "pm2 start ./src/index.js --name=base-poject",
    "pm2-restart": "pm2 restart base-poject",
    "pm2-stop": "pm2 stop base-poject",
    "pm2-list": "pm2 list",
    "pm2-delete": "pm2 delete base-poject",
    "prepare": "husky install",
    "lint": "eslint ./",
    "lint-fix": "eslint ./ --fix",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "ArhamSoft",
    "MERN",
    "Node.js",
    "MongoDB",
    "Sample",
    "Base Project",
    "Coding Standards"
  ],
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-bearer-token": "^2.4.0",
    "express-rate-limit": "^6.9.0",
    "express-validation": "^4.1.0",
    "express-validator": "^7.0.1",
    "html5-to-pdf": "^4.0.1",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.1",
    "jwt-simple": "^0.5.6",
    "mailgun-js": "^0.6.7",
